<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewModuleActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetEnd="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvBack"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:text="chevron-left"
                android:fontFamily="@font/font_awesome_free_solid"
                android:textStyle="bold"
                android:textSize="20sp"
                android:gravity="center"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:clickable="true"/>
            <TextView
                android:id="@+id/tvModuleName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Module"
                android:textStyle="bold"
                android:textSize="18sp"
                android:gravity="center|start"/>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_below="@+id/toolbar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                    android:id="@+id/rlModuleProgress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ECFAF5"
                    android:padding="20dp"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/tvPercent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0%"
                        android:textStyle="bold"
                        android:layout_centerInParent="true"
                        android:textSize="16dp"/>

                <ProgressBar
                    android:id="@+id/quizProgress"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true"
                    android:indeterminateOnly="false"
                    android:max="100"
                    android:progress="0"
                    android:progressDrawable="@drawable/circle_percentage" />
            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvTopicList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvQuizList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none"
                />
        </LinearLayout>
    </ScrollView>
    </RelativeLayout>