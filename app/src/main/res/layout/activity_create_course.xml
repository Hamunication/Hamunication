<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CreateCourseActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvEditTopic"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:text="Courses"
                android:textStyle="bold"
                android:textSize="20sp"
                android:gravity="center|start"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/imgBtnLogout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:backgroundTint="@android:color/transparent"
                android:layout_weight="1"
                android:text="arrow-right-from-bracket"
                android:textSize="18sp"
                android:background="@null"
                android:fontFamily="@font/font_awesome_free_solid"
                android:textColor="@color/material_dynamic_primary0"
                app:cornerRadius="4dp"
                app:rippleColor="@color/colorPrimaryLight" />
        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
            android:id="@+id/llBtnContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_below="@+id/toolbar"
            android:orientation="vertical">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/mtrlBtnAddCourse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create New Course"
                android:textColor="#000"
                app:icon="@drawable/ic_add"
                app:iconSize="24dp"
                app:iconGravity="textStart"
                app:iconTint="#000"
                app:backgroundTint="@null"
                android:background="@drawable/flat_button"
                android:textSize="18sp" />
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvCourseList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/llBtnContainer"/>


</RelativeLayout>